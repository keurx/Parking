<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:columnCount="3"
    android:rowCount="10"
    android:visibility="visible"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/cast_intro_overlay_button_background_color"
    android:onClick="buttonOnClick">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:background="@color/colorPrimary"
        android:onClick="buttonOnClick">

    </FrameLayout>

    <TableLayout
        android:layout_height="30dp"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="125dp"
        android:layout_width="150dp">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <TextView
                android:text="libelle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/libelle"
                android:textColor="@color/cast_expanded_controller_progress_text_color" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <TextView
                android:text="adresse"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/adresse"
                android:textColor="@color/cast_expanded_controller_progress_text_color" />
        </TableRow>

    </TableLayout>

    <TextView
        android:text="ville"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ville"
        android:capitalize="words"
        android:textColor="@android:color/background_light"
        android:textSize="24sp"
        android:gravity="center"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/gridLayout5"
        android:layout_alignEnd="@+id/gridLayout5"
        android:layout_marginRight="20dp"
        android:layout_marginEnd="29dp"
        android:layout_marginLeft="50dp" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/etat"
        android:layout_alignBottom="@+id/ville"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="34dp"
        android:layout_marginEnd="34dp" />

    <TableLayout
        android:layout_below="@+id/ville"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="16dp"
        android:layout_height="40dp"
        android:layout_width="120dp">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <TextView
                android:text="places disponibles"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </TableRow>

        <TableRow
            android:layout_width="100dp"
            android:layout_height="match_parent" >

            <TextView
                android:text="dispo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/dispo"
                android:gravity="center"
                android:textColor="@android:color/holo_red_dark"
                android:textSize="14sp" />
        </TableRow>

    </TableLayout>

    <FrameLayout
        android:layout_height="50dp"
        android:layout_below="@+id/frameLayout2"
        android:layout_alignRight="@+id/etat"
        android:layout_alignEnd="@+id/etat"
        android:layout_marginRight="0dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="0dp"
        android:layout_width="60dp">

        <Button
            android:layout_height="30dp"
            android:id="@+id/button"
            android:text="carte"
            android:background="@color/cast_libraries_material_featurehighlight_outer_highlight_default_color"
            android:layout_width="60dp"
            android:freezesText="false"
            android:gravity="center_vertical|center" />
    </FrameLayout>

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/frameLayout"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/coordones"
        android:layout_marginTop="80dp"
        android:visibility="invisible" />
</RelativeLayout>